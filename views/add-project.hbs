                {{/if}}
                <a href="/testimonials" class="dropdown-nav-list">Testimonials</a>
                <a href="/contact" class="contact-me-nav">Contact Me</a>
                {{#if isLogin}}
                <a  class="dropdown-nav-list" href="/logout"><i class="fa-solid fa-circle-user"></i> Logout</a>
                {{else}}
                <a  class="dropdown-nav-list" href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i> Login</a>
                {{/if}}
            </div>
        </nav>

        <!-- Form -->
        <form action="/add-project" method="POST" enctype="multipart/form-data">
            <h1>ADD MY PROJECT</h1>
            <div>
                <label for="project-name-input">Project Name</label>
                <input id="project-name-input" name="title" type="text" required>
            </div>
            <div class="date-form">
                <div>
                    <label for="start-date-input">Start Date</label>
                    <input id="start-date-input" name="startDate" type="date"  required>
                </div>
                <div>
                    <label for="end-date-input">End Date</label>
                    <input id="end-date-input" name="endDate" type="date"  required>
                </div>
            </div>
            <div>
                <label for="description-input">Description</label>
                <textarea id="description-input" name="description"></textarea>
            </div>
            <div class="checkbox-form">
                <p>Technologies</p>
                <div class="checkbox-list">
                    <div>
                        <input value="Node JS" type="checkbox" id="technologies1" name="technologies">
                        <label for="technologies1">Node Js</label>
                    </div>
                    <div>
                        <input value="React JS" type="checkbox" id="technologies2" name="technologies">
                        <label for="technologies2">React Js</label><br>
                    </div>
                    <div>
                        <input value="Next JS" type="checkbox" id="technologies3" name="technologies">
                        <label for="technologies3">Next Js</label>
                    </div>
                    <div>
                        <input value="JavaScript" type="checkbox" id="technologies4" name="technologies">
                        <label for="technologies4">JavaScript</label>
                    </div>
                    <div>
                        <input value="Java" type="checkbox" id="technologies4" name="technologies">
                        <label for="technologies4">Java</label>
                    </div>
                    <div>
                        <input value="Android" type="checkbox" id="technologies4" name="technologies">
                        <label for="technologies4">Android</label>
                    </div>
                </div>
            </div>
            <div>
                <label for="upload-image">Upload Image</label>
                <input id="upload-image" name="image" type="file" required>
            </div>
            <div class="button">
                <button type="submit">submit</button>
            </div>
        </form>

