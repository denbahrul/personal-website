        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/0a1c7b5f76.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <!-- NavBar -->
        <nav>
            <div class="nav-body">
                <div class="left">
                    <img src="./assets/images/bahrul.svg" alt="logo">
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="/project">Add Project</a>
                        </li>
                        <li>
                            <a href="/testimonials">Testimonials</a>
                        </li>
                    </ul>
                </div>
                <div class="right">
                    <a href="./contact">Contact Me</a>
                    <button class="dropdown-button" onclick="toggleDropdown()">
                        <i class="fa-duotone fa-solid fa-bars fa-xl"></i>
                    </button>
                </div>
            </div>
            <div class="hide" id="dropdown-nav-menu">
                <a href="/" class="dropdown-nav-list">Home</a>
                <a href="/project" class="dropdown-nav-list">My Project</a>
                <a href="/testimonials" class="dropdown-nav-list">Testimonials</a>
                <a href="/contact" class="contact-me-nav">Contact Me</a>
            </div>
        </nav>

        <!-- Form -->
        <form>
            <h1>GET IN TOUCH</h1>
            <div>
                <label for="nameInput">Name</label>
                <input id="nameInput" type="text" required>
            </div>
            <div>
                <label for="emailInput">Email</label>
                <input id="emailInput" type="email"  required>
            </div>
            <div>
                <label for="phoneInput">Phone Number</label>
                <input id="phoneInput" type="number" required>
            </div>
            <div>
                <label for="SubjectInput">Subject</label>
                <select id="SubjectInput">
                    <option hidden></option>
                    <option>Frontend Developer</option>
                    <option>Backend Developer</option>
                    <option>Fullstack Developer</option>
                </select>
            </div>
            <div>
                <label for="messageInput">Your Message</label>
                <textarea id="messageInput"></textarea>
            </div>
            <div class="button">
                <button type="button" onclick="getData()">submit</button>
            </div>
        </form>
    </body>
    <script src="./assets/script/script.js"></script>
    <script src="./assets/script/navbar.js"></script>
